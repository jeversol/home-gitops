{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    ':disableRateLimiting',
    ':semanticCommits',
    ':timezone(America/New_York)',
    'workarounds:k3sKubernetesVersioning',
    'group:kubernetes',
    'mergeConfidence:all-badges',
  ],
  argocd: {
    managerFilePatterns: [
      '/argocd/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/\\.ya?ml$/',
    ],
  },
  // Regex manager to bump cert-manager version in kustomization.yaml URL
  regexManagers: [
    {
      // Only run on your cert-manager kustomization file
      fileMatch: ['^infrastructure/cert-manager/kustomization\\.yaml$'],
      // Capture the vX.Y.Z in the download URL
      matchStrings: [
        'github\\.com/cert-manager/cert-manager/releases/download/v(?<currentValue>\\d+\\.\\d+\\.\\d+)/cert-manager\\.yaml'
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'cert-manager',
      versioningTemplate: 'semver',
    },
  ],
}