{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    ':disableRateLimiting',
    ':semanticCommits',
    ':timezone(America/New_York)',
    'workarounds:k3sKubernetesVersioning',
    'group:kubernetes',
    'mergeConfidence:all-badges',
  ],
  argocd: {
    managerFilePatterns: [
      '/argocd/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/\\.ya?ml$/',
    ],
  },
  // Regex manager to bump cert-manager version in kustomization.yaml URL
  regexManagers: [
    {
      fileMatch: ['^infrastructure/cert-manager/kustomization\\.yaml$'],
      matchStrings: [
        'github\\.com/cert-manager/cert-manager/releases/download/v(?<currentValue>\\d+\\.\\d+\\.\\d+)/cert-manager\\.yaml'
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'cert-manager/cert-manager',
      versioningTemplate: 'semver',
    },
    {
      fileMatch: ['^infrastructure/argocd/kustomization\\.yaml$'],
      matchStrings: [
        'raw\\.githubusercontent\\.com/argoproj/argo-cd/v(?<currentValue>\\d+\\.\\d+\\.\\d+)/manifests/install\\.yaml'
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'argoproj/argo-cd',
      versioningTemplate: 'semver', 
    }
  ],
}