{
  "dashboard": {
    "id": null,
    "title": "Pod Resource Overview",
    "uid": "pod-resources",
    "version": 1,
    "schemaVersion": 39,
    "tags": ["kubernetes", "resources"],
    "timezone": "",
    "panels": [
      {
        "id": 1,
        "title": "Top CPU Usage by Pod",
        "type": "stat",
        "targets": [
          {
            "expr": "topk(10, rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m]))",
            "legendFormat": "{{namespace}}/{{pod}}/{{container}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.7},
                {"color": "red", "value": 0.9}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Top Memory Usage by Pod",
        "type": "stat", 
        "targets": [
          {
            "expr": "topk(10, container_memory_working_set_bytes{container!=\"POD\",container!=\"\"})",
            "legendFormat": "{{namespace}}/{{pod}}/{{container}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000000000},
                {"color": "red", "value": 2000000000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "5s"
  }
}